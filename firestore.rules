rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all documents for everyone (public read)
    match /{document=**} {
      allow read: if true;
    }
    
    // Matches collection - allow authenticated users to write
    match /matches/{matchId} {
      allow write: if request.auth != null;
    }

    // Players collection - allow authenticated users to write
    match /players/{playerId} {
      allow write: if request.auth != null;
      // Allow players to read and write their own data
      allow read, write: if request.auth != null && 
        (request.auth.token.email == resource.data.email || 
         request.auth.token.email == request.resource.data.email);
    }

    // News collection - allow authenticated users to write
    match /news/{newsId} {
      allow write: if request.auth != null;
    }

    // Teams collection - allow authenticated users to write
    match /teams/{teamId} {
      allow write: if request.auth != null;
    }

    // Venues collection - allow authenticated users to write
    match /venues/{venueId} {
      allow write: if request.auth != null;
    }

    // Users collection (for user roles)
    match /users/{userId} {
      // Allow users to read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to read user data (for role checking)
      allow read: if request.auth != null;
    }
  }
}